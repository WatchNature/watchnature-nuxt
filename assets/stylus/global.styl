@import '_vars.styl'

//
// Popover Menus
//

.popover__container
  background-color white
  box-shadow $shadow
  min-width 150px
  
  ul
    list-style none
    margin 0
    padding $space-1 0 $space-1 0

//
// Buttons
//

.button
  border none
  background-color transparent
  color inherit
  cursor pointer
  padding $space-1

  &:hover
    background-color $color-info
    color #ffffff

  // &.button-primary

  &.button--info
    background-color $color-info
    color #ffffff

