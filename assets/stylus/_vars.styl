//
// Colors
//

$grays = #111111 #e0e0e0

for value, index in $grays
  define('$gray-' + sum(index 1), value)

//
// Spacing
//

$spacing-values = 0.5 1 1.5 2 2.5 3 3.5 4 4.5 5 5.5 6 6.5 7 7.5 8

for value, index in $spacing-values
  define('$space-' + sum(index 1), unit(value, 'rem'))
